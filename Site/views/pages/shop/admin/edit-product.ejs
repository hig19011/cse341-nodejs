<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/stylesheets/shop/forms.css">
<link rel="stylesheet" href="/stylesheets/shop/product.css">
</head>

<body>
  <%- include('../includes/navigation.ejs') %>

  <main>
    <form class="product-form" action="/shop/admin/<% if (editing) { %>edit-product<% } else { %>add-product<% } %>"
      method="POST">
      <div class="form-control">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" value="<% if (editing) { %><%= product.title %><% } %>">
      </div>
      <div class="form-control">
        <label for="imageUrl">Image URL</label>
        <input type="text" name="imageUrl" id="imageUrl" value="<% if (editing) { %><%= product.imageUrl %><% } %>">
      </div>
      <div class="form-control">
        <label for="price">Price</label>
        <input type="number" name="price" id="price" step="0.01"
          value="<% if (editing) { %><%= product.price %><% } %>">
      </div>
      <div class="form-control">
        <label for="description">Description</label>
        <textarea name="description" id="description"
          rows="5"><% if (editing) { %><%= product.description %><% } %></textarea>
      </div>
      <div class="form-control">
        <label for="height">Height (inches)</label>
        <input type="number" name="height" id="height" step=".25"
          value="<% if (editing) { %><%= product.height %><% } %>">
      </div>
      <div class="form-control">
        <label for="width">Width (inches)</label>
        <input type="number" name="width" id="width" step=".25" value="<% if (editing) { %><%= product.width %><% } %>">
      </div>
      <div class="form-control">
        <label for="depth">Depth (inches)</label>
        <input type="number" name="depth" id="depth" step=".25" value="<% if (editing) { %><%= product.depth %><% } %>">
      </div>
      <div class="form-control">
        <label for="weight">Weight (ounces)</label>
        <input type="number" name="weight" id="weight" step=".1"
          value="<% if (editing) { %><%= product.weight %><% } %>">
      </div>

      <% if(editing) { %>
      <input type="hidden" value="<%= product._id %>" name="productId">
      <% } %>
      <button class="btn" type="submit"><% if (editing) { %> Update Product <% } else { %> Add Product <% }  %></button>
    </form>
  </main>
  <%- include('../includes/end.ejs') %>