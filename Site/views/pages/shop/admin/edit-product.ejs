<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/stylesheets/shop/forms.css">
<link rel="stylesheet" href="/stylesheets/shop/product.css">
</head>

<body>
  <%- include('../includes/navigation.ejs') %>

  <main>
    <% if(errorMessage) { %>
      <div class="user-message user-message--error"><%= errorMessage %></div>
    <% } %>
    <form class="product-form" action="/shop/admin/<% if (editing) { %>edit-product<% } else { %>add-product<% } %>"
      method="POST">
      <div class="form-control">
        <label for="title">Title</label>
        <input class="<%= validationErrors.find(e=> e.param === 'title') ? 'invalid' : '' %>"
          type="text" name="title" id="title" value="<% if (editing || hasError) { %><%= product.title %><% } %>">
      </div>
      <div class="form-control">
        <label for="imageUrl">Image URL</label>
        <input class="<%= validationErrors.find(e=> e.param === 'imageUrl') ? 'invalid' : '' %>"
          type="text" name="imageUrl" id="imageUrl" value="<% if (editing || hasError) { %><%= product.imageUrl %><% } %>">
      </div>
      <div class="form-control">
        <label for="price">Price</label>
        <input class="<%= validationErrors.find(e=> e.param === 'price') ? 'invalid' : '' %>"
          type="number" name="price" id="price" step="0.01"
          value="<% if (editing || hasError) { %><%= product.price %><% } %>">
      </div>
      <div class="form-control">
        <label for="description">Description</label>
        <textarea class="<%= validationErrors.find(e=> e.param === 'description') ? 'invalid' : '' %>"
          name="description" id="description"
          rows="5"><% if (editing || hasError) { %><%= product.description %><% } %></textarea>
      </div>
      <div class="form-control">
        <label for="height">Height (inches)</label>
        <input class="<%= validationErrors.find(e=> e.param === 'height') ? 'invalid' : '' %>"
          type="number" name="height" id="height" step=".25"
          value="<% if (editing || hasError) { %><%= product.height %><% } %>">
      </div>
      <div class="form-control">
        <label for="width">Width (inches)</label>
        <input class="<%= validationErrors.find(e=> e.param === 'width') ? 'invalid' : '' %>"
          type="number" name="width" id="width" step=".25" 
          value="<% if (editing || hasError) { %><%= product.width %><% } %>">
      </div>
      <div class="form-control">
        <label for="depth">Depth (inches)</label>
        <input class="<%= validationErrors.find(e=> e.param === 'depth') ? 'invalid' : '' %>"
          type="number" name="depth" id="depth" step=".25" 
          value="<% if (editing || hasError) { %><%= product.depth %><% } %>">
      </div>
      <div class="form-control">
        <label for="weight">Weight (ounces)</label>
        <input class="<%= validationErrors.find(e=> e.param === 'weight') ? 'invalid' : '' %>"
          type="number" name="weight" id="weight" step=".1"
          value="<% if (editing || hasError) { %><%= product.weight %><% } %>">
      </div>

      <% if(editing) { %>
      <input type="hidden" value="<%= product._id %>" name="productId">
      <% } %>
      <button class="btn" type="submit"><% if (editing) { %> Update Product <% } else { %> Add Product <% }  %></button>
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    </form>
  </main>
  <%- include('../includes/end.ejs') %>