<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/stylesheets/shop/forms.css">
<link rel="stylesheet" href="/stylesheets/shop/auth.css">
</head>

<body>
  <%- include('../includes/navigation.ejs') %>

  <main>
    <% if(errorMessage) { %>
      <div class="user-message user-message--error"><%= errorMessage %></div>
    <% } %>
    <form class="login-form" action="/shop/auth/reset" method="POST">
      <div class="form-control">
        <label for="email">Email</label>
        <input class="<%= validationErrors.find(e=> e.param === 'email') ? 'invalid' : '' %>" 
          type="email" name="email" id="email" value="<%= oldInput.email %>">
      </div>
      <button class="btn" type="submit">Reset Password</button>
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    </form>
  </main>
  <%- include('../includes/end.ejs') %>