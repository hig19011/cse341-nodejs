<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/stylesheets/shop/cart.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if(products.length > 0) { 
            var total = 0;    
        %>
            <ul class="cart__item-list">
                <% products.forEach(p => { %>
                    <li class="cart__item">
                        <h1><%= p.productId.title %></h1>
                        <img src="<%= p.productId.imageUrl %>">
                        <h2>Quantity: <%= p.quantity %></h2>
                        <div>
                            <form action="/shop/cart-product-increment" method="POST">
                                <input type="hidden" value="<%= p.productId._id %>" name="productId" >
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <button class="btn" type="submit">+</button>
                            </form>
                            <form action="/shop/cart-product-decrement" method="POST">
                                <input type="hidden" value="<%= p.productId._id %>" name="productId" >
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <button class="btn" type="submit">-</button>
                            </form>
                        </div>
                        <h2>Price: $<%= p.productId.price %></h2>
                        <form action="/shop/cart-delete-item" method="POST">
                            <input type="hidden" value="<%= p.productId._id %>" name="productId" >
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <button class="btn danger" type="submit">Delete</button>
                        </form>
                    </li>
                <% 
                    total += p.quantity * p.productId.price
                }) %>
            </ul>
            <hr>
            <div class="centered">
                <form action="/shop/create-order" method="POST">
                    <h2>Total Price: $<%= total.toFixed(2) %></h2>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="btn">Order Now!</button>                    
                </form>
            </div>
        <% } else { %>
            <h1>No Products in Cart!</h1>
        <% } %>
    </main>
    <%- include('../includes/end.ejs') %>