<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/stylesheets/shop/product.css">
</head>

<body>
  <%- include('../includes/navigation.ejs') %>
  <main class="centered product-details">

    <header class="card__header">
      <h1 class="product__title">
        <%= product.title %>
      </h1>
    </header>
    <div class="card__image">
      <img src="<%= product.imageUrl %>" alt="<%= product.title %>">
    </div>
    <div class="card__content">
      <h2 class="product__price">$<%= product.price %></h2>
      <p class="product__description"><%= product.description %></p>
      <p class="product__stat"><%= product.height %> x <%= product.width %> x <%= product.depth %> inches</p>
      <p class="product__stat"><%= product.weight %> ounces</p>
    </div>
    <div class="card__actions">
      <% if(isAuthenticated) { %>
        <%- include('../includes/add-to-cart.ejs', {product: product}) %>
      <% } %>
    </div>    
  </main>
  <%- include('../includes/end.ejs') %>