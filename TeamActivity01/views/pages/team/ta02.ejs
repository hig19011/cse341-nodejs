<!DOCTYPE html>
<html>
<head>
  <% include ../../includes/header.ejs %>
</head>

<body>
  <% include ../../includes/nav.ejs %>
<div class="jumbotron text-center">
  <div class="container">
    <h1><%= title %></h1>
    <p>This is the placeholder for Team Activity 02</p>
  </div>
</div>
<div class="container">  
  <div>
    <form method="post" action="/team/ta02/addUser">
      <label for="user"/>
      <input type="text" for="user" id="user" name="user"/>
      <button type="submit">Add User</button>
    </form>
  </div>
  
  <div>
    <form method="post" action="/team/ta02/removeUser">
      <label for="user"/>
      <input type="text" for="user" id="user" name="user"/>
      <button type="submit">Remove User</button>
    </form>
    <% if(errorMessage.length > 0) { %> 
      <p><%= errorMessage %></p>  
    <% } %>
  </div>
  
  <ul>
    <% users.forEach(user => { %>
        <li><%=user%></li>
    <% }); %>
  </ul>

</div>



</body>
</html>